@model IEnumerable<ContosoBooks.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th></th>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th class="text-center">
				@Html.DisplayNameFor(model => model.AuthorId)
			</th>
			<th class="text-center">
				@Html.DisplayNameFor(model => model.Genre)
			</th>
			<th class="text-center">
				@Html.DisplayNameFor(model => model.YearPublished)
			</th>
			<th class="text-right">
				@Html.DisplayNameFor(model => model.Price)
			</th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<td class="text-center"><a asp-action="Create" class="btn btn-default">Add New Book</a></td>
			<td colspan="5"></td>
		</tr>
	</tfoot>
	<tbody>
	@foreach (var item in Model) {
		<tr>
			<td class="text-center">
				<div class="btn-group btn-group-sm">
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></a>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span></a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span></a>
				</div>
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Title)
			</td>
			<td class="text-center">
				@Html.DisplayFor(modelItem => item.Author.LastName)
			</td>
			<td class="text-center">
				@Html.DisplayFor(modelItem => item.Genre)
			</td>
			<td class="text-center">
				@Html.DisplayFor(modelItem => item.YearPublished)
			</td>
			<td class="text-right">
				@Html.DisplayFor(modelItem => item.Price)
			</td>
		</tr>
	}
	</tbody>
</table>
